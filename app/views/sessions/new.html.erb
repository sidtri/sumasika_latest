<div class="site_container" style="margin-top:55px;">
	<div class="row" >
	<div class="col-xs-6">
		<div class="row" style="text-align:center; position:fixed;">
		<h1 class="signuphed">Join Sumasika</h1>
		<h3 class="signuphed3">or <%= link_to 'Signup', members_new_path %></h3>
		</div>
	</div>
	<div class="col-xs-6">
		<div class="well">
			
			<%=form_tag sessions_create_path, :class => 'form' do |f|   %>
			 <div class="form-group">
		     	<%= label_tag 'exampleInputEmail1', 'Email address' %>
			    <!-- <label for="exampleInputEmail1">Email address</label> -->
			    <%= text_field_tag 'email' , "",class: 'form-control',placeholder: 'Enter Email',:required => true %>
			  </div>
			  <div class="form-group">
			    <%= label_tag 'exampleInputPassword1', 'Password' %>
			    <%= password_field_tag 'password' , '',class: 'form-control',placeholder: 'Enter password', :required => true %>
			  </div>
			  <div class="row">
			  <div class="col-xs-5">
			   		<%= submit_tag 'Login',class: 'btn btn-success',name: 'login' %>
			  </div>
			  <div class="col-xs-6">
			   		<%= link_to 'Forgotten your password?', sessions_forgetpwd_path , class: 'btn btn-sucess' %>
			   </div>
			  </div>
			<% end -%>
		</div>
	</div>
