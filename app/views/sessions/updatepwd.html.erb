<div class="site_container" style="margin-top:55px;">
	<div class="row" >
	<div class="col-xs-6">
		<div class="row" style="text-align:center; position:fixed;">
		<h1 class="signuphed">Join Sumasika</h1>
		<h3 class="signuphed3">or <%= link_to 'Signup', members_new_path %></h3>
		</div>
	</div>
	<div class="col-xs-6">
		<div class="well">
			
			<%= form_tag sessions_resetpwd_path, :class => 'form' do |f|   %>
				 <div class="form-group">
				 <%= label_tag 'exampleInputEmail1', "New Password" %>
				    <!-- <label for="exampleInputEmail1">Email address</label> -->
				    <%= password_field_tag 'newpwd' , "",class: 'form-control',:required => true %>
				  </div>
				  <div class="form-group">
				  	<%= label_tag 'confpassword', 'Confirm Password' %>
				  	<%= password_field_tag 'oldpwd' , "",class: 'form-control',:required => true %>
				  	
				  </div>

				  
				  <div class="row">
						<%= hidden_field_tag  'token', params[:token]  %>
					  <div class="col-xs-5">
					   		<%= submit_tag 'Reset Password',class: 'btn btn-success',name: 'login' %>
					  </div>
				  
				  </div>
			<% end -%>
		</div>
	</div>
