<div class="row">
	<div class="col-xs-12">
		<table class="table table-bordered table-condensed table-striped">
			<legend>Transactions</legend>
			<thead>
				<tr>
					<th>Sl no.</th>
					<th>Sender Name</th>
					<th>Receipient Name</th>
					<th>Receipient Mobile number</th>
					<th>Money</th>
					<th>Sent Date</th>
				</tr>
			</thead>
			<tbody>
			 <% @details.each_with_index do |data, index| %>
				<tr>
					<td><%= index+1 %></td>
					<td><%= data.user.first_name %></td>
					<td><%= data.first_name %></td>
					<td><code><%= data.mtn %></code></td>
					<td><%= data.money %></td>
					<td><%= data.created_at.strftime("%x") %> UTC</td>
				</tr>
			  <%end%>
			</tbody>
		</table>
	</div>
</div>