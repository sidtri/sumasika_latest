 <body style="background:#e8ebef">

 <%=  render :partial => 'layouts/alert' %>
  
 <div id="header" class="row">
     <h1><a href="/">Sumasika</a></h1>
     <div class="navigation">
     <div class="account-dropdown-view" id="dropdownview" style="cursor:pointer">
       <a class="account">
