 <div class="panel panel-default">
	<div class="panel-heading base-background">
	      <h3 class="panel-title">
	         <span class="glyphicon glyphicon-cog" style="font-size:30px;"></span>
	      </h3>
	      <h3>Account Settings</h3>
	</div>
	<div class="panel-body">
			
	<%= form_for @userform , :url => dashboard_details_update_path, :class => 'form' do |f| %>
	
		
			 <div class="row">
			 	<div class="col-xs-12 col-xs-push-2">
					 <div class="col-xs-4 ">
					 	<h4>Personal Details</h4>
					 	<div class="form-group">
					 		<label for="firstname">First Name</label>
					 		<%= text_field_tag 'first_name' , @settingdetails['first_name'] ,class: 'form-control' %>
					 	</div>
					 	<div class="form-group">
						 	<label for="firstname">Last Name</label>
						 	<%= text_field_tag 'last_name' , @settingdetails['last_name'],class: 'form-control' %>
						</div>
						<div class="form-group">
						 	<label for="firstname">Date Of Birth</label>
						 
					    <%= text_field_tag 'dob' , @settingdetails['dob'] ,class: 'form-control' %>
						 </div>

						 <div class="form-group">
						 	<label for="email">Email</label>
							<%= text_field_tag 'email' ,  @settingdetails['email']  ,class: 'form-control' %>
						 </div>
						 <div class="form-group">
						 	<label for="photo">Photo</label>
							<!-- <input type="file" name="photo" id="photo" class="form-control"> -->
							<%= f.file_field :image , class: 'form-control' %>
						 </div>
						 <div class="form-group">
						 <div class="row">
							 <div class="col-xs-12" style="text-align: center;">
							 	<%= image_tag @settingdetails.image.thumb('100x100#').url, :class => "img-thumbnail"  %>
							 </div>
						 </div>
						 </div>


					 	
					 </div>
					
					<div class="col-xs-4 ">
					 	<h4>Address</h4>
					 	<div class="form-group">
						 	<label for="street">Number & Street</label>
						 	<%= text_field_tag 'address' , @settingdetails['address'],class: 'form-control' %>
					 	</div> 
					 	
					 	<div class="form-group">
						 	<label for="country">Country</label>
						 	<%= country_select("user", "country",selected: @settingdetails['country'] ) %>

					 	</div>
					 <!-- 	<div class="form-group">
						 	<label for="town">Town</label>
						 	<%= text_field_tag 'town' , @settingdetails['address'],class: 'form-control' %>
					 	</div> -->
					 	<div class="form-group">
						 	<label for="postcode">Postal Code</label>
			<%= text_field_tag 'postalcode' , @settingdetails['postalcode'], class: 'form-control' %>
					 	</div>



					 <div class="form-group">
					 		
<a class="btn btn-link " href="<%= dashboard_changepwd_path %>?token=<%= @settingdetails['token'] %>" role="button" style="margin-top: 25px;" >		Change Password ?
				</a>
					 		
					 </div>
					 </div>
				 </div>
				 	
			 </div>
			 <hr>
			 <div class="row">
			 <div class="col-xs-12" style="text-align:center;">
			 	<%= submit_tag 'Save',class: 'btn btn-success',name: 'Save' %>
			 	
			 </div>
			 	
			 </div>
	 <% end %>


		
	</div>
			
	</div>
</div>